version: '3'

services:
   db:
     image: mysql:5.7
     volumes:
       - db_data:/var/lib/mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: root
       MYSQL_DATABASE: springboot
       MYSQL_USER: springboot
       MYSQL_PASSWORD: springboot

   productmanager:
     depends_on:
       - db
     build: .  
     image: dockerhandson/productmanager:latest
     ports:
       - "8080:8080"
     restart: always
     environment:
       DB_HOST: db:3306
       DB_USER: wordpress
       DB_PASSWORD: wordpress
volumes:
    db_data: